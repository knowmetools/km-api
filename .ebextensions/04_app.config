container_commands:
  01_copy_settings:
    command: "cp km_api/km_api/local_settings.prod.py km_api/km_api/local_settings.py"
  02_migrate:
    command: "source /opt/python/run/venv/bin/activate && km_api/manage.py migrate --noinput"
    leader_only: true
  03_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && km_api/manage.py collectstatic --noinput"


option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "km_api.settings"
    LAYER_RSA_KEY_FILE_PATH: "/etc/km-api/certs/layer-dev.pem"
    PYTHONPATH: "/opt/python/current/app/km_api:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: km_api/km_api/wsgi.py
    NumProcesses: 3
    NumThreads: 20
